<main class="auth-container">
    <div class="auth-box">
        <h2>Şifre Sıfırlama</h2>

        <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="forgot-form">

            <div asp-validation-summary="All" class="text-danger validation-summary"></div>

            <div class="form-group">
                <label for="email" class="form-label">E-Posta Adresi</label>
                <input type="email" id="email" name="email" class="input-field" placeholder="E-posta adresinizi girin" required />
            </div>

            <button type="submit" class="btn-login">Gönder</button>
        </form>

        <div class="login-footer">
            Giriş ekranına dönmek için 
            <a asp-controller="Account" asp-action="Login">tıklayın</a>.
        </div>
    </div>
</main>
