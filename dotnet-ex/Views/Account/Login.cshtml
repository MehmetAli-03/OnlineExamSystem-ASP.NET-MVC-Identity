@model dotnet_ex.Models.AccountLoginModel

<main class="auth-container">
    <div class="auth-box">
        <h2>Giri≈ü Yap</h2>

        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Email" class="input-field" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group password-wrapper">
                <input asp-for="Password" type="password" id="loginPasswordInput" class="input-field" placeholder="≈ûifrenizi girin" />
                <span class="toggle-password" onclick="toggleLoginPassword()">üëÅÔ∏è</span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Giri≈ü Yap</button>
        </form>

        <div class="login-footer">
            <p>Hesabƒ±n yok mu? <a asp-controller="Account" asp-action="Create">Kayƒ±t Ol</a></p>
            <p><a asp-controller="Account" asp-action="ForgotPassword">≈ûifremi Unuttum</a></p>
        </div>
    </div>
</main>

<script>
    function toggleLoginPassword() {
        const passwordInput = document.getElementById("loginPasswordInput");
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
    }
</script>
