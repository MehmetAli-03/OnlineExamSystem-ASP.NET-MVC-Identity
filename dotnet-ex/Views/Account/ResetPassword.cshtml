@model dotnet_ex.Models.AccountResetPasswordModel

<main class="auth-container">
    <div class="auth-box">
        <h2>Parola Sıfırlama</h2>

        <form method="post" asp-controller="Account" asp-action="ResetPassword" class="reset-form">

            <div asp-validation-summary="All" class="text-danger validation-summary"></div>

            <input type="hidden" asp-for="token" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="Password" class="form-label">Yeni Şifre</label>
                <input asp-for="Password" type="password" class="input-field" placeholder="Yeni şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword" type="password" class="input-field" placeholder="Şifrenizi tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Şifreyi Sıfırla</button>
        </form>

        <div class="login-footer">
            Giriş ekranına dönmek için 
            <a asp-controller="Account" asp-action="Login">tıklayın</a>.
        </div>
    </div>
</main>
