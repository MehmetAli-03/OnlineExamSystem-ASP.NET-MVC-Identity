@model dotnet_ex.Models.Test
@{
    Layout = "_AdminLayout";
}
<main class="create-form-container">
    <div class="create-form-box">
        <h2>Yeni Test Ekle</h2>
        <form method="post" asp-action="Create" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="create-form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="create-input" placeholder="Test başlığını giriniz..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="create-form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="create-input" placeholder="Kısa açıklama giriniz..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="create-form-group">
                <label asp-for="DurationMinutes"></label>
                <input asp-for="DurationMinutes" type="number" class="create-input" placeholder="Süre (dakika)..." />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <button type="submit" class="create-btn-submit">
                <i class="fas fa-save"></i> Kaydet
            </button>
        </form>
    </div>
</main>
