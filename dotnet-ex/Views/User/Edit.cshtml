@model dotnet_ex.Models.UserEditModel
@{
    Layout = "_AdminLayout";
}
<main class="create-form-container">
    <div class="create-form-box">
        <h2>Kullanıcı Güncelle</h2>
        <form method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="create-form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="create-input" placeholder="Kullanıcı adını giriniz..." />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="create-form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="create-input" placeholder="Mail adresi giriniz..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="create-form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="create-input"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="create-form-group">
                <label>Roller</label>
                <div>
                    @foreach (var item in ViewBag.Roles)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   name="SelectedRole"
                                   value="@item"
                                   class="form-check-input"
                                   @(Model.SelectedRole?.Contains(item) == true ? "checked" : "") />
                            <label class="form-check-label">@item</label>
                        </div>
                    }
                </div>
            </div>

            <button type="submit" class="create-btn-submit">
                <i class="fas fa-save"></i> Kaydet
            </button>
        </form>
    </div>
</main>
